<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaintenanceCallSystem6</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="/">MaintenanceCallSystem6</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Register">Register</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Account/Login">Login</a>
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        @* <li class="nav-item">
                            <a class="nav-link" href="/Admin/Dashboard">Admin Dashboard</a>
                        </li> *@
                    }
                    <li class="nav-item">
                        <a class="nav-link" href="/User/Profile">My Profile</a>
                    </li>
                    @* <a href="@Url.Action("Reports", "Admin")" class="btn btn-info">View Technician Reports</a> *@

                </ul>
            </div>
        </nav>
    </header>

    <!-- Hero Section -->
    <div class="hero-section">
        <div class="hero-overlay">
            <div>
                <h1 class="display-4">Welcome to the Joburg Maintenance Portal</h1>
                <p class="lead">Manage your maintenance requests and connect with the city of Johannesburg effortlessly.</p>
                <a class="btn btn-primary btn-lg" href="/Account/Register">Get Started</a>
            </div>
        </div>
    </div>

    <div class="container main-content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-auto">
        <div class="container">
            &copy; 2024 - MaintenanceCallSystem6 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>






