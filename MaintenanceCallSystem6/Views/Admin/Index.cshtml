
@* @model MaintenanceCallSystem6.Views.Admin.IndexModel *@
@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> UserManager

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>

@{
    if (User.IsInRole("Admin"))
    {
        <h2>Welcome, Admin!</h2>
        <p>Here is your admin dashboard content.</p>
    }
    else
    {
        <h2>You do not have access to this page.</h2>
    }
}



<h2>Welcome to the Admin Dashboard</h2>

<div class="container">
    <p>This page is restricted to Admin users only.</p>

    <!-- Example content for admins -->
    <ul>
        <li><a asp-controller="User" asp-action="Manage">Manage Users</a></li>
        <li><a asp-controller="Reports" asp-action="Index">View Reports</a></li>
        <li><a asp-controller="Settings" asp-action="Index">Admin Settings</a></li>
    </ul>
</div>
